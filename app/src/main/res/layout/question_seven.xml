<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--  Start : Your code should be within this block -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question 7"
            android:textSize="27sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorBlack"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:text="In which condition will you buy a new phone?"
            android:textSize="23sp"
            />

        <RadioGroup
            android:id="@+id/radioGroup7"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            >

            <RadioButton
                android:id="@+id/radioGroup7.1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="When the old phone has been used for a year or two.(but it sill works)"
                android:textSize="20sp"
                />

            <RadioButton
                android:id="@+id/radioGroup7.2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="When the old phone has been used for more than three years.(but it will works)"
                android:textSize="20sp"
                android:layout_marginTop="20dp"/>

            <RadioButton
                android:id="@+id/radioGroup7.3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="When the old phone breaks down."
                android:textSize="20sp"
                android:layout_marginTop="20dp"/>

            <RadioButton
                android:id="@+id/radioGroup7.4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="When a new phone is released."
                android:textSize="20sp"
                android:layout_marginTop="20dp"/>

            <RadioButton
                android:id="@+id/radioGroup7.5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Others"
                android:textSize="20sp"
                android:layout_marginTop="20dp"/>



        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_next7"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="66dp"
            android:layout_marginTop="30dp"
            android:background="@color/colorPrimary"
            android:onClick="Click_next7"
            android:text="NEXT"
            android:textSize="20sp"

            />

    </LinearLayout>


    <!-- END    : Your code should be within this block -->

</LinearLayout>
