<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_question1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginTop="30dp"
        android:textSize="20sp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
     <RadioButton
         android:id="@+id/rb_opt1_1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         />

    <RadioButton
        android:id="@+id/rb_opt1_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    </RadioGroup>

    <TextView
        android:id="@+id/tv_question2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="20sp" />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp">
    <RadioButton
        android:id="@+id/rb_opt2_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <RadioButton
        android:id="@+id/rb_opt2_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <RadioButton
        android:id="@+id/rb_opt2_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <RadioButton
        android:id="@+id/rb_opt2_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <RadioButton
        android:id="@+id/rb_opt2_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    </RadioGroup>
    <Button
        android:id="@+id/btn_next"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="88dp"

        android:background="@color/colorPrimary"
        android:onClick="onClickNext"
        android:text="next"
        android:textColor="@color/colorWhite"
        android:textSize="22sp" />
</LinearLayout>
